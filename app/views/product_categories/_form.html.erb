<%= form_with(model: @product_category, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
    <% product_category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>

    <% product_category.errors.details.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <% if @product_category.errors.any? %>
    <div id="error_explanation">
      <div>
        <%= pluralize(@product_category.errors.count, "error") %> prohibited
        this article from being saved:
      </div>
      <ul>
        <% @product_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# Use the following to generate a dropdown %>
  <% if false %>
  <div class="form-group">
    <label>Parent Category</label>
    <%= form.collection_select(:parent_id, ProductCategory.all, :id, :name, {:include_blank => "-"}, {class: "form-control"}) %>
  </div>
  <% end %>

  <%# Hradcoded parent id for testing %>
  <!-- <div><input type="text" name="product_category[parent_id]" value="203"></div> -->

  <% if true %>
  <div class="form-group">
    <label>Parent Category</label>
    <select class="form-control" name="product_category[parent_id]">
      <%= print_categories_dropdown_options(@product_categories) %>
    </select>
  </div>
  <% end %>

  <div>
    <a href="<%= product_categories_path%>" class="btn btn-sm btn-danger">Cancel</a>
    <button class="btn btn-sm btn-success">Save</button>
  </div>
<% end %>
