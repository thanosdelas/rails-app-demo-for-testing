<%= form_with(model: @product_category, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name, class: "form-control" %>
    <% product_category.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>

    <% product_category.errors.details.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <% if @product_category.errors.any? %>
    <div id="error_explanation">
      <div>
        <%= pluralize(@product_category.errors.count, "error") %> prohibited
        this article from being saved:
      </div>
      <ul>
        <% @product_category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.collection_select(:parent_id, ProductCategory.all, :id, :name, {}, {class: "form-control"}) %>
  </div>

  <div>
    <a href="<%= products_path%>" class="btn btn-sm btn-danger">Cancel</a>
    <button class="btn btn-sm btn-success">Save</button>
  </div>
<% end %>
