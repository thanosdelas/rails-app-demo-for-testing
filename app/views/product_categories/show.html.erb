<a href="<%= product_categories_path%>" class="btn btn-sm btn-primary mt-2">All Product Categories</a>

<div class="row">
	<div class="col-sm-12">
		<div>
			<h2><%= @product_category.name%></h2>
		</div>
		<hr />
		<div>
			<%= link_to "Delete", product_category_path(@product_category), class: "btn btn-sm btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
			<%= link_to "Edit", edit_product_category_path(@product_category), class: "btn btn-sm btn-warning" %>			
		</div>
	</div>
</div>